include ../Components/Header
block content
    br
    .container
        // Page Heading
        .d-sm-flex.align-items-left.justify-content-between.mb-4
        .jumbotron
            .row
                .container-fluid.table-responsive
                    form(method='POST' action="/Company/Modification/"+company['_id']+"/Updates")
                        .container
                            != messages('message', locals)
                            if errors
                                each error, i in errors
                                    div(class="alert alert-danger") #{error.msg}
                        h2 زانیاری کۆمپانیا
                        .row
                            .form-group.col-md-3
                                label ناوی کۆمپانیا
                                input.form-control(name="companyName" type='text' value=company['companyName'])
                            .form-group.col-md-3
                                label ژمارەی مۆبایل
                                input.form-control(name="phoneNumber" type='text' value=company['phoneNumber'])
                            .form-group.col-md-3
                                label ناونیشان
                                input.form-control(name="location" type='text' value=company['location'])
                            .form-group.col-md-3
                                label بڕی قەرز
                                input.form-control(name="remainedbalance" type='text' value=company['remainedbalance'])
                        button.btn.btn-primary.m-2(type='submit') تۆماربکە






